            </column>

            <column name="base_amount" type="number" remarks="Сумма счет-фактуры в валюте системы">
                <constraints nullable="false"/>
            </column>

            <column name="payment_method_id" type="number" remarks="Идентификатор метода платежа">
                <constraints nullable="false"/>
